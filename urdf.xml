<robot name="Capstone">
  <link name="base">
    <collision>
      <geometry>
	    <box size="0.3 0.3 0.3 " />
	  </geometry>
	</collision>
  </link>

  <link name="bicep" >
    <collision>
	  <geometry>
	    <box size="0.175 0.042 0.006" />
      </geometry>
	</collision>
  </link>

  <link name="forearm">
    <collision>
	  <geometry>
	    <!--mesh filename="stuff.stl" /-->
		<box size="0.175 0.42 0.006" />
	  </geometry>
	</collision>
  </link>

  <link name="magnet">
    <collision>
	  <geometry>
	    <!--mesh filename="stuff.stl" /-->
		<box size="0.5 0.5 0.5" />
	  </geometry>
	</collision>
  </link>


  <joint name="shoulder" type="revolute">
    <parent link="base" />
	<child link="bicep" />
	<limit lower="0" upper="3.665" effort="30" velocity="30" />
	<origin xyz="0 0 0.0776 " rpy="0 0 0" />
	<axis xyz="0 0 1" />
  </joint>

  <joint name="elbow" type="revolute">
    <parent link="bicep" />
	<child link="forearm" />
	<origin xyz="0.13335 0 0.08" rpy="0 0 0.785" />
	<axis xyz="0 0 1" />
	<limit lower="0.13335" upper="3.927" effort="30" velocity="30" />
  </joint>

  <joint name="actuator" type="prismatic">
    <parent link="forearm" />
	<child link="magnet" /> 
	<origin xyz="0.1778 0 -0.08" rpy="0 0 0" />
	<axis xyz="0 0 1" />
	<limit lower="0" upper="0.25" effort="30" velocity="30" />
  </joint> 

</robot>
